    "JWT_SECRET": "your-secure-production-jwt-secret-key",
    "NODE_ENV": "production",
    "API_BASE_URL": "https://jyotaishya.vercel.app/api",
    "CORS_ORIGIN": "https://jyotaishya.vercel.app",
    "DB_NAME": "jyotaishya"
  }
}
